<% if current_page.path == "index.html" %>
  <% navbar_wagon_item_color = 'white'  %>
  <!-- Start with invisible background and light logo on homepage -->
  <div class="navbar-wagon navbar-invisible" data-logo-light="<%= image_path 'images/van-gorsel-logo-light.png' %>" data-logo-dark="<%= image_path 'images/van-gorsel-logo-dark.png' %>">

    <!-- Logo -->
    <% link_to "index.html", class: "navbar-wagon-brand" do %>
      <%= image_tag "images/van-gorsel-logo-light.png", alt: "logo", id: "navbar-logo" %>
    <% end %>
<% else %>
  <% navbar_wagon_item_color = 'black' %>
  <!-- Start with background and dark logo on any other page -->
  <div class="navbar-wagon navbar-visible" >
    <!-- Logo -->
    <% link_to "../index.html", class: "navbar-wagon-brand" do %>
      <%= image_tag "images/van-gorsel-logo-dark.png", alt: "logo", id: "navbar-logo" %>
    <% end %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <a href="#ontwerp" class="navbar-wagon-item navbar-wagon-link">Ontwerp</a>
    <a href="#bouw" class="navbar-wagon-item navbar-wagon-link">Bouw</a>
    <a href="#vastgoed" class="navbar-wagon-item navbar-wagon-link">Vastgoed</a>
    <a href="#contact" class="navbar-wagon-item navbar-wagon-link">Contact</a>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg" style="color: <%= navbar_wagon_item_color %>">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Host</a></li>
        <li><a href="#">Trips</a></li>
        <li><a href="#">Messagese</a></li>
      </ul>
    </div>
  </div>
</div>
