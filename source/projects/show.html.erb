<div class="projects-container __mobile __desktop">
  <h3 class="text-center"><b><%= name %></b></h3>
  <h3 class="text-center"><b><%= city %></b></h3>
  <div class="slideshow">
    <div class="slideshow__arrow-next"></div>
    <div class="slideshow__arrow-back"></div>
    <div class="slideshow-container">
      <!-- Full-width images with number and caption text -->
      <% images.each_with_index do |image, index| %>
      <div class="mySlides">
        <div class="numbertext"><%= index + 1%> / <%= images.length %></div>
        <%= image_tag image, :class => "slider-img"%>
      </div>
      <% end %>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
      <% images.each_with_index do |image, index| %>
      <span class="dot" onclick="currentSlide(<%= index + 1 %>)"></span>
      <% end %>
    </div>
  </div>

  <div class="show-text">
    <p><%= description %></p>
  </div>
</div>

<a id="projecten"></a>
